<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/expenseToSettlePerPersonItemNameTextView"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/colorTextDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expenseToSettlePerPersonItemPaidTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_vertical"
        android:text="@string/settle_expense_item_paid"
        android:textColor="@color/colorTextDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/expenseToSettlePerPersonItemValueTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="right|center_vertical"
        android:text=""
        android:textColor="@color/colorTextDark"
        android:textSize="16sp" />

</LinearLayout>
