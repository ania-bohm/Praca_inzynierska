<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".EditAccountSettingsFragment">

    <TextView
        android:id="@+id/editPersonalDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:shadowColor="@color/colorTextDarkSeeThrough"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="0.6"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/edit_personal_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="79dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editAccountFirstNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="@string/account_first_name"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/editAccountLastNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="@string/account_last_name"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/editAccountEmailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="5dp"
            android:hint="@string/account_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/editAccountPhoneNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="5dp"
            android:hint="@string/account_phone_number"
            android:inputType="phone"
            android:textColor="@color/colorTextDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88">

        <Button
            android:id="@+id/confirmEditPersonalDataButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_outline_white"
            android:fontFamily="@font/montserrat"
            android:text="@string/confirm_edit_personal_data"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorWhiteSemiTransparent" />

        <Button
            android:id="@+id/rejectEditPersonalDataButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_button_outline_white"
            android:fontFamily="@font/montserrat"
            android:text="@string/reject_edit_personal_data"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorWhiteSemiTransparent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>