<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ChangePasswordFragment">

    <TextView
        android:id="@+id/changePasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/change_password"
        android:textColor="@color/colorTextDark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/changePasswordOldTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_password_old"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/changePasswordOldEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:password="true"
            android:textColor="@color/colorTextDark"
            app:endIconMode="password_toggle" />

        <TextView
            android:id="@+id/changePasswordNewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_password_new"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/changePasswordNewEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:password="true"
            android:textColor="@color/colorTextDark" />

        <TextView
            android:id="@+id/changePasswordRepeatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/change_password_repeat"
            android:textColor="@color/colorTextDark" />

        <EditText
            android:id="@+id/changePasswordRepeatEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:password="true"
            android:textColor="@color/colorTextDark" />

    </LinearLayout>

    <ImageView
        android:id="@+id/changePasswordShowPasswordButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.810"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.890">

        <Button
            android:id="@+id/confirmChangePasswordButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_outline"
            android:fontFamily="@font/montserrat"
            android:text="@string/confirm_change_password"
            android:textAllCaps="false"
            android:textColor="@color/colorTextDark" />

        <Button
            android:id="@+id/rejectChangePasswordButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_outline"
            android:fontFamily="@font/montserrat"
            android:text="@string/reject_change_password"
            android:textAllCaps="false"
            android:textColor="@color/colorTextDark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>