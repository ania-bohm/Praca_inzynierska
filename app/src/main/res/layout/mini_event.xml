<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="-10dp"
    android:layout_marginStart="-10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/miniEventLinearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangular_background">

        <TextView
            android:id="@+id/miniEventNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/miniEventDateStartTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_date_start"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/miniEventTimeStartTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/event_time_start"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/miniEventDashTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mini_event_dash"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/miniEventTimeFinishTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_time_finish"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>