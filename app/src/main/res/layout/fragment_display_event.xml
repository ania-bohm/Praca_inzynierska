<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_background_light"
    tools:context=".fragments.DisplayEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_semi_rectangular_background_primary"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="@string/event"
                android:textColor="@color/colorTextDark"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/editEventButton"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/eventNameTextView"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/toDoListButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@id/commonExpenseButton"
                android:src="@drawable/ic_to_do_list_3" />

            <ImageView
                android:id="@+id/commonExpenseButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/scoreboardButton"
                android:src="@drawable/ic_budget_2" />

            <ImageView
                android:id="@+id/scoreboardButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/chatButton"
                android:src="@drawable/ic_success" />

            <ImageView
                android:id="@+id/chatButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_chat_2" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/displayEventDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="@string/event_data"
                android:textColor="@color/colorTextDark"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/displayEventAuthorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_author"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/showEventAuthorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_background" />

                <TextView
                    android:id="@+id/displayEventNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_name"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/showEventNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_background" />

                <TextView
                    android:id="@+id/eventWholeDateStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_whole_date_start"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/showEventDateStartTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/colorTextDark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/showEventTimeStartTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/colorTextDark"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_background" />

                <TextView
                    android:id="@+id/displayEventDateFinishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_whole_date_finish"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/showEventDateFinishTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/colorTextDark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/showEventTimeFinishTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:padding="5dp"
                        android:textColor="@color/colorTextDark"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_background" />

                <TextView
                    android:id="@+id/displayEventLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_location"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/showEventLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/login_background" />

                <TextView
                    android:id="@+id/displayEventDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:text="@string/event_description"
                    android:textColor="@color/colorTextDarkSeeThrough"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/showEventDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:padding="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/displayEventGuestListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:text="@string/event_guest_list"
                android:textColor="@color/colorTextDark"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/displayEventGuestListListView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>