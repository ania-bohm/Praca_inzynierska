<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditEventFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/editEvent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editEventNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_name" />

                <TextView
                    android:id="@+id/editEventDateStartTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_date_start" />

                <TextView
                    android:id="@+id/editEventTimeStartTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_time_start" />

                <TextView
                    android:id="@+id/editEventDateFinishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_date_finish" />

                <TextView
                    android:id="@+id/editEventTimeFinishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_time_finish" />

                <TextView
                    android:id="@+id/editEventLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_location" />

                <TextView
                    android:id="@+id/editEventDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/event_description" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editEventNameEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="text" />


                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editEventDateStartEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="date"
                    app:mask="##/##/####" />

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editEventTimeStartEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="time"
                    app:mask="##:##" />

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editEventDateFinishEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="date"
                    app:mask="##/##/####" />

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/editEventTimeFinishEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="time"
                    app:mask="##:##" />

                <EditText
                    android:id="@+id/editEventLocationEditText"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/editEventDescriptionEditText"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editEventReadyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/event_ready"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/editEventCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/event_cancel"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>