<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ChatFragment">

    <TextView
        android:id="@+id/chatHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:padding="10dp"
        android:shadowColor="@color/colorTextDarkSeeThrough"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="0.6"
        android:text="@string/chat_header"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/bottom_semi_rectangular_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatHeaderTextView"
        app:layout_constraintVertical_bias="0.157">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/login_background"
            android:orientation="horizontal"
            android:padding="7dp">

            <EditText
                android:id="@+id/sendMessageEditText"
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorTextDark"
                android:hint="@string/message_hint"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sendMessageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_send" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>